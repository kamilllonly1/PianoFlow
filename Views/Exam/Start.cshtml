@{
    ViewData["Title"] = "Экзамен";
    var questions = ViewBag.Questions as List<PianoFlow.Models.ExamQuestion>;
}
<h2>Экзамен</h2>
<form asp-action="Start" method="post">
    @for (int i = 0; i < questions.Count; i++)
    {
        <div class="mb-3">
            <b>Вопрос @(i + 1):</b> @questions[i].Question
            <div>
                @foreach (var opt in System.Text.Json.JsonSerializer.Deserialize<string[]>(questions[i].Options))
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[@i]" value="@opt" id="q_@i@opt" required />
                        <label class="form-check-label" for="q_@i@opt">@opt</label>
                    </div>
                }
            </div>
        </div>
    }
    <button type="submit" class="btn btn-primary">Завершить экзамен</button>
</form> 